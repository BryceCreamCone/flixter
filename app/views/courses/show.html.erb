<br />
<div class="booyah-box col-10 offset-1 feature">
  <h1><%= @course.title %></h1>
  <%=image_tag @course.image.url, class: 'img-fluid'%>

  <div class="row">
    <div class="col-sm-4 col-12">
      <span class="badge badge-default">
        <%= number_to_currency @course.cost %>
      </span>

      <% if current_user && current_user == @course.user %><br /><br />
      <%=link_to 'Administer',
      instructor_course_path(@course),
      class: 'btn btn-danger btn-large'%>
      <% end %>
    </div><br /><br />

    <div class="col-sm-8 col-12">
      <%= @course.description %>
    </div>

    <ul class="col-sm-6 offset-1">
    <% @course.sections.each do |section| %>
      <li>
        <%=section.title%>
        <ul class="float-right">
          <% section.lessons.each do |lesson| %>
          <li class="row">
            <%=link_to lesson_path(lesson),
            style: 'color: white;' do %>
            <b><%=lesson.title %></b>
            -
            <%=lesson.subtitle%>
            <% end %>
          </li>
          <% end %>
        </ul>
      </li>
      <br /><br />
    <% end %>
    </ul>
  </div>
</div>