<br />
<div class="booyah-box col-10 offset-1">
  <h1 class="text-center">Learn Something New Today!</h1>
  <hr />
  <% @courses.each do |course| %>
    <h3 class="text-center"><%= course.title %></h3><br />
    <div class="row">
      <div class="col-sm-8 col-12">
        <%= course.description %>
      </div>
      <div class="col-sm-4 col-12 text-center">
        <%= link_to 'More Info', '#', class: 'btn btn-primary btn-large' %>
      </div>
    </div>
    <br class="clr" />
  <% end %>
</div>