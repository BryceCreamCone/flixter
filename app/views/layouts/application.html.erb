<!DOCTYPE html>
<html>
  <head>
    <title>Flixter</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Ubuntu:300,400,400i,700&display=swap" rel="stylesheet">
    <link href="https://vjs.zencdn.net/7.6.0/video-js.css" rel="stylesheet">
    <script src="https://js.stripe.com/v3/"></script>
    <%= tag :meta, :name => "stripe-key", :content => STRIPE_PUBLIC_KEY %>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>

  <body>
  <div id="flex-content-container">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand">
        <%= link_to root_path, class: 'hvr-icon-bob' do %>
          <i class="fas fa-fire fa-3x hvr-icon"></i>
        <% end %>
      </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse"
      data-target="#navbarSupportedContent"
      aria-expanded="fase" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-link">
            <%= link_to 'All Courses', courses_path,
            class: 'nav-link btn btn-primary',
            style: 'background-color:#4c7725;color:#FFE;
            border:1px solid black;border-radius:20px;' %>
          </li>
        </ul>
        <ul class="navbar-nav">
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to 'My Dashboard', dashboard_path,
              class: 'nav-link',
              style: 'background-color:#4c7725;color:#FFE;
              border:1px solid black;border-radius:20px;' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Sign Out', destroy_user_session_path,
              method: :delete, class: 'nav-link',
              style: 'background-color:#4c7725;color:#FFE;
              border:1px solid black;border-radius:20px;' %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to 'Sign In', new_user_session_path,
              class: 'nav-link',
              style: 'background-color:#4c7725;color:#FFE;
              border:1px solid black;border-radius:20px;' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Sign Up', new_user_registration_path,
              class: 'nav-link',
              style: 'background-color:#4c7725;color:#FFE;
              border:1px solid black;border-radius:20px;' %>
            </li>
          <% end %>
        </ul>      
      </div>
    </nav>
      <% if notice.present? %>
        <p class="alert alert-info"><%= notice %></p>
      <% end %>

      <% if alert.present? %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>
    <%= yield %>
  </div>


  <footer class="footer-sticky">
    <div class="container">
      <div class="row">
        <div class="col-12 col-sm-3">
          <b>Teachers</b>
          <br />
          <%= link_to 'Teach A Course', new_instructor_course_path %>
          <br />
          <%= link_to 'My Dashboard', dashboard_path %>
        </div>
        <div class="col-12 col-sm-3">
          <b>About</b>
          <br />
          <%= link_to 'Team', team_path %>
          <br />
          <%= link_to 'Careers', '#' %>
          <br />
          <%= link_to 'Privacy Policy', privacy_path %>
        </div>
        <div class="col-12 col-sm-3">
          <b>Contact</b>
          <br />
          bgust9@gmail.com
          <br />
          2911 Marina Drive
          <br />
          Middleton, WI 53562
        </div>
        <div class="col-12 col-sm-3">
          <b>Social</b>
          <br />
          <br />
          <%= link_to 'https://github.com/brycecreamcone',
          class: 'hvr-icon-float' do %>
            <i class="fab fa-github-square fa-2x social-button hvr-icon"></i>
          <% end %>
          <%= link_to 'https://www.linkedin.com/in/bryce-gust-6629484a',
          class: 'hvr-icon-float' do %>
            <i class="fab fa-linkedin fa-2x social-button hvr-icon"></i>
          <% end %>
        </div>
      </div>
    </div> 
  </footer>
      
  <script src='https://vjs.zencdn.net/7.6.0/video.js'></script>
  <script src="https://vjs.zencdn.net/ie8/1.1.2/videojs-ie8.min.js"></script>
  </body>
</html>
